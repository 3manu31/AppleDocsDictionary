{
  "name": "AppleDocsDictionary",
  "displayName": "Apple Docs RAG",
  "description": "RAG extension for Apple API documentation to enhance Copilot responses",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:swift",
    "onLanguage:objective-c"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apple-docs-rag.searchDocs",
        "title": "Search Apple Documentation",
        "category": "Apple Docs"
      },
      {
        "command": "apple-docs-rag.indexFramework",
        "title": "Index Framework Documentation",
        "category": "Apple Docs"
      },
      {
        "command": "apple-docs-rag.enhanceWithIntelligentRAG",
        "title": "Enhance with Intelligent RAG",
        "category": "Apple Docs"
      },
      {
        "command": "apple-docs-rag.scanDeprecatedApis",
        "title": "Scan for Deprecated APIs",
        "category": "Apple Docs"
      },
      {
        "command": "apple-docs-rag.viewCacheStats",
        "title": "View Cache Statistics",
        "category": "Apple Docs"
      },
      {
        "command": "apple-docs-rag.clearCache",
        "title": "Clear API Cache",
        "category": "Apple Docs"
      }
    ],
    "configuration": {
      "title": "Apple Docs RAG",
      "properties": {
        "appleDocsRag.enableAutoSearch": {
          "type": "boolean",
          "default": true,
          "description": "Automatically search for relevant docs based on code context"
        },
        "appleDocsRag.preferredFrameworks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "SwiftUI",
            "UIKit",
            "Foundation",
            "Combine"
          ],
          "description": "Frameworks to prioritize in searches"
        },
        "appleDocsRag.cacheDocumentation": {
          "type": "boolean",
          "default": true,
          "description": "Cache documentation locally for faster access"
        }
      }
    },
    "chatParticipants": [
      {
        "id": "apple-docs",
        "name": "apple-docs",
        "description": "Search Apple developer documentation",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node-fetch": "^2.6.13",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "node-fetch": "^3.3.2"
  }
}
